{
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": 0,
        "max-len": 0,
        "no-console": 0,
        "no-await-in-loop": 0,
        "prefer-destructuring" : 0,
        "no-restricted-syntax": 0,
        "arrow-body-style": 0
    }
}